<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  
  <servlet>
  	<servlet-name>PerformLoginServiceImpl</servlet-name>
 	<servlet-class>weddingsite.server.PerformLoginServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>PerformLoginServiceImpl</servlet-name>
  	<url-pattern>/weddingsite/performLogin/*</url-pattern>
  </servlet-mapping>
  
  <!-- Servlet context listeners -->
  <listener>
    <listener-class>weddingsite.server.DatabaseInitListener</listener-class>
  </listener>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>WeddingSiteGWT.html</welcome-file>
  </welcome-file-list>

</web-app>
